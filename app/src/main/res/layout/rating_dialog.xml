<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="4"
    android:background="#000"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RATE THE EVENT"
        android:id="@+id/ratingDialogTitleTextView"
        android:layout_row="0"
        android:layout_column="0"
        android:typeface="serif"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LOOKS LIKE YOU CAME TO THE EVENT! PLEASE, TELL US HOW MUCH ARE YOU ENJOYING IT."
        android:id="@+id/ratingDialogSubitleTextView"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:textColor="@color/white"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:textSize="12dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingDialogRatingBar"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT'S TOO EARLY TO RATE IT!"
        android:id="@+id/ratingDialogDismissButton"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:background="#282828"
        android:textColor="#f1f1f1"
        android:textSize="12dp" />

</GridLayout>