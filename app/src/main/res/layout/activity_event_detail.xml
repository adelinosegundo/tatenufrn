<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/event_detail_row"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="10dp"
        android:columnCount="2"
        android:rowCount="20"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="wrap_content"
        android:background="#000" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:id="@+id/titleLayout"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:id="@+id/eventDetailTitleTextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:typeface="serif"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:paddingBottom="50dp" />

            <GridLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal|bottom"
                android:rowCount="1"
                android:columnCount="2"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:drawableLeft="@drawable/i_plus_w40"
                    android:textColor="#FFFFFF"
                    android:id="@+id/eventDetailJoinButton"
                    android:text="Join"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"></Button>

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/eventDetailLikeButton"
                    android:src="@drawable/i_heart_w40"
                    android:layout_row="0"
                    android:layout_column="1"/>
            </GridLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/eventeDetailTimeImageView"
            android:layout_row="6"
            android:layout_column="0"
            android:src="@drawable/i_calendar_w40"
            android:maxHeight="10dp"
            android:maxWidth="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Today 23:00 - 11:00"
            android:id="@+id/eventDetailDateTimeTextView"
            android:layout_row="6"
            android:layout_column="1"
            android:textColor="@color/white"
            android:paddingRight="10dp"
            android:typeface="serif"
            android:layout_gravity="fill"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/eventDetailAddressImageView"
            android:layout_row="7"
            android:layout_column="0"
            android:src="@drawable/i_marker_w40"
            android:maxHeight="10dp"
            android:maxWidth="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Berghain / Panorama Bar (OFFICIAL)"
            android:id="@+id/eventDetailAddressTextView"
            android:layout_row="7"
            android:layout_column="1"
            android:textColor="@color/white"
            android:paddingRight="10dp"
            android:typeface="serif"
            android:layout_gravity="fill"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DESCRIPTION"
            android:id="@+id/eventDetailDescriptionTitleTextView"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:typeface="serif"
            android:layout_gravity="fill|left"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam cursus posuere feugiat. Nulla sagittis consequat nunc elementum semper."
            android:id="@+id/eventDetailDescriptionTextView"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:typeface="sans"
            android:layout_gravity="fill|left" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10 ATTENDEES"
            android:id="@+id/eventDetailAttendeesTitleTextView"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:typeface="serif"
            android:layout_gravity="fill|left"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Elisha Wildermuth, Lazaro Coover, Barbera Ruggerio, Lavonia Laing, Hester Herrera, Diedra Strahl, Epifania Broadbent, Kam Dolce, Natalya Schmid and Ethelene Gehring."
            android:id="@+id/eventDetailAttendeesTextView"
            android:layout_row="11"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:typeface="sans"
            android:layout_gravity="fill|left" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MAP"
            android:id="@+id/eventDetailMapTitleTextView"
            android:layout_row="14"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:typeface="serif"
            android:layout_gravity="fill|left"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/eventLocationContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/eventDetailImageView"
            android:layout_toEndOf="@+id/eventDetailImageView"
            android:layout_row="15"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"></LinearLayout>

    </GridLayout>

</ScrollView>
