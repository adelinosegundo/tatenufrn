<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_detail_row"
    android:layout_width="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:verticalSpacing="2dp"
    android:horizontalSpacing="10dp"
    android:columnCount="2"
    android:rowCount="6"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:background="#000" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:id="@+id/titleLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Title Title Title Title Title Title Title Title"
            android:id="@+id/titleEventDetailTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:typeface="serif"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventDetailLikeButton"
            android:layout_gravity="right|bottom" />
    </FrameLayout>

    <RatingBar
        android:id="@+id/ratingEventRatingBar"
        android:layout_row="3"
        android:layout_column="0"
        style="?android:attr/ratingBarStyle"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="false"
        android:layout_height="100dp"
        android:gravity="center_horizontal|bottom"
        android:layout_gravity="bottom|left"
        android:fillViewport="true"
        android:layout_marginTop="5dp"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description Description Description Description Description Description"
        android:id="@+id/descriptionEventDetailTextView"
        android:layout_below="@+id/titleEventDetailTextView"
        android:layout_alignParentStart="true"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center" />


    <LinearLayout
        android:id="@+id/eventLocationContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/eventDetailImageView"
        android:layout_toEndOf="@+id/eventDetailImageView"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"></LinearLayout>

</GridLayout>
