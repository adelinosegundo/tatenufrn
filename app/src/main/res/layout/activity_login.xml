<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android_dev.tatenuufrn.activities.Login"
    android:background="#855e9f">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="tatenufrn"
        android:id="@+id/h1TextView"
        android:typeface="sans"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:src="@drawable/logo2"/>



    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGAALogin"
        android:id="@+id/loginButton"
        android:layout_below="@+id/h2TextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LOGIN"
        android:id="@+id/h2TextView"
        android:textColor="#fff"
        android:typeface="serif"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/h1TextView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/h1TextView" />

</RelativeLayout>
