<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventRow"
    android:layout_gravity="fill_horizontal"
    android:layout_height="90dp"
    android:horizontalSpacing="5dp"
    android:columnCount="5"
    android:rowCount="4"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:id="@+id/imageEventRowImageView"
        android:minHeight="90dp"
        android:minWidth="80dp"
        android:maxHeight="90dp"
        android:maxWidth="80dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#333"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_height="50dp"
        android:text="A STUNNING TITLE WITH TWO ROWS MAXIMUM"
        android:id="@+id/titleEventRowTextView"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/eventRowImageView"
        android:textColor="@color/white"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:capitalize="characters"
        android:typeface="serif"
        android:textAllCaps="true"
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        android:textSize="15dp"
        android:clickable="false"
        android:longClickable="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ratingEventImageView"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_heart" />

    <RatingBar
        android:id="@+id/ratingEventRatingBar"
        android:layout_row="2"
        android:layout_column="2"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="true"
        android:layout_height="15dp"
        android:gravity="center_horizontal|bottom"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ratingEventImageView2"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginLeft="10dp"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_people"/>

    <RatingBar
        android:id="@+id/ratingEventRatingBar2"
        android:layout_row="3"
        android:layout_column="2"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="true"
        android:layout_height="15dp"
        android:gravity="center_horizontal|bottom"
        android:layout_marginLeft="2dp"
        android:layout_gravity="bottom|left"
        android:fillViewport="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_height="20dp"
        android:text="TIME LEFT"
        android:id="@+id/timeTitleEventRowTextView"
        android:layout_row="2"
        android:layout_column="4"
        android:textColor="@color/white"
        android:padding="0dp"
        android:layout_width="80dp"
        android:typeface="serif"
        android:gravity="center_horizontal|bottom"
        android:textSize="9dp"
        android:textAllCaps="true"/>

    <TextView
        android:layout_height="20dp"
        android:text="12:59:59"
        android:id="@+id/timeEventRowTextView"
        android:layout_row="3"
        android:layout_column="4"
        android:textColor="@color/green"
        android:padding="0dp"
        android:layout_width="80dp"
        android:gravity="center_horizontal"
        android:typeface="serif"
        android:textSize="18dp"
        android:textAllCaps="true"/>

</GridLayout>
