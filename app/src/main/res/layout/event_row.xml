<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_row"
    android:numColumns="2"
    android:layout_width="fill_parent"
    android:layout_gravity="fill_horizontal"
    android:layout_height="100dp"
    android:verticalSpacing="2dp"
    android:horizontalSpacing="10dp"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:minHeight="82dp"
        android:minWidth="82dp"
        android:maxHeight="82dp"
        android:maxWidth="82dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"/>

    <TextView
        android:layout_height="wrap_content"
        android:text="Title Text Title Text Title Text Title Text Title Text"
        android:id="@+id/titleTextView"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:textColor="@color/white"
        android:padding="5dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:capitalize="characters"
        android:typeface="serif"
        android:textAllCaps="true"
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_height="50dp"
        android:text="Description Description Description Description Description Description Description"
        android:id="@+id/descriptionTextView"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        android:ellipsize="none"
        android:scrollHorizontally="false"/>


</GridLayout>
