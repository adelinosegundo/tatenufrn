<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_row"
    android:numColumns="2"
    android:layout_width="fill_parent"
    android:layout_gravity="fill_horizontal"
    android:layout_height="100dp"
    android:verticalSpacing="2dp"
    android:horizontalSpacing="10dp"
    android:columnCount="3"
    android:rowCount="3"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/eventRowImageView"
        android:minHeight="82dp"
        android:minWidth="82dp"
        android:maxHeight="82dp"
        android:maxWidth="82dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"/>

    <TextView
        android:layout_height="50dp"
        android:text="Title Text Title Text Title Text Title Text Title Text"
        android:id="@+id/titleEventRowTextView"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/eventRowImageView"
        android:textColor="@color/white"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:capitalize="characters"
        android:typeface="serif"
        android:textAllCaps="true"
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingRight="5dp"
        android:textSize="13dp" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowSpan="2"
        android:layout_gravity="fill_horizontal"
        android:src="@drawable/stars"
        />

    <TextView
        android:layout_height="15dp"
        android:text="TIME LEFT"
        android:id="@+id/timeTitleEventRowTextView"
        android:layout_row="1"
        android:layout_column="2"
        android:textColor="@color/white"
        android:padding="0dp"
        android:layout_width="60dp"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:textSize="9dp" />


    <TextView
        android:layout_height="20dp"
        android:text="03:23"
        android:id="@+id/timeEventRowTextView"
        android:layout_row="2"
        android:layout_column="2"
        android:textColor="@color/green"
        android:padding="0dp"
        android:layout_width="60dp"
        android:gravity="center_horizontal"
        android:typeface="serif"
        android:textSize="18dp" />
</GridLayout>
